# Example Claude Code Settings
# Copy this to settings.json and customize

{
  "editor.fontSize": 14,
  "editor.fontFamily": "MesloLGS Nerd Font, FiraCode Nerd Font, Monaco, Consolas, monospace",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font, FiraCode Nerd Font",

  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-seti",

  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true
}
